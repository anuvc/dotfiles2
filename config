[colors]
;background = ${xrdb:color0:#222}
background = #aa222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
underline = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/statusbar]
;monitor = ${env:MONITOR:HDMI-1}
dpi = 144
width = 100%
height = 25 
;offset-x = 25%
;offset-y = 1%
radius = 0.0
fixed-center = true 
bottom = true

